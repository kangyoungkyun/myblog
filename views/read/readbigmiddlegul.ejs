        <%if (middlerows != undefined) { %>
            <% for (var i = 0; i < middlerows.length; i++) {  %>
                <div class="row">
                        <div class="col-md-12">
                            <!-- <h4><%=middlerows[i]['title']%></h4> -->
  

                            <div class="col-md-12"><br>
                                <table class="table">
                                    <thead>
                                            <tr>
                                                <th>번호</th>
                                                <th style="width: 60%;">제목</th>
                                                <th>작성자</th>
                                                <th>날짜</th>
                                                <th>조회수</th>
                                            </tr>
                                    </thead>
                                    <tbody>
                                        <%if (postrows != undefined) { %>
                                            <% for (var ii = 0; ii < postrows.length; ii++) {  %>
                                                <%if (postrows[ii]['middlenum'] == middlerows[i]['middlenum']) { %>
                                                    <tr>
                                                            <td><%=(ii + 1)%></td>
                                                            <td><a href="/read/readpostgul?postnum=<%=postrows[ii]['postnum']%>&bignum=<%=middlerows[i]['bignum']%>"><%=postrows[ii]['title']%></a></td>
                                                            <td><%=postrows[ii]['author']%></td>
                                                            <td><%=postrows[ii]['regdate']%></td>
                                                            <th><%=postrows[ii]['cnt']%></th>
                                                    </tr>
                                                <%}%>
                                            <% } %>
                                        <% } %>
    
    
                                    </tbody>
                                  </table>
    
                            </div>

                        <!-- 페이징    -->
                        <br>
                        <br>
                <div class="text-center">
                    <ul class="pagination">
                            <%if (onerow != undefined) { %>
                       
                                <%
                                var bigmun = onerow[0]['bignum']

                                var curSet = pasing.curSet
                                var endPage = pasing.endPage
                                var startPage = pasing.startPage
                                var totalSet = pasing.totalSet
                                var totalPage = pasing.totalPage
                                var page_list_size = pasing.page_list_size
                                var page_size = pasing.page_size
                                var curPage = pasing.curPage
                                %>
                                
                                
                                <% if(curSet > 1){ %>
                                
                                <li value=(startPage -1) class="previous">
                                    <a href='/read/readbigmiddlegul?num=<%=bigmun%>&pagenum=<%= ( startPage - 1) %>'>이전</a>
                                </li>
                                
                                <%}%>
                                
                                
                                <% for(var i = startPage; i <= endPage; i++){

                                if(i > totalPage){break;}
                                
                                    if(i == curPage){ %>

                                    <li value=<%= i %> class='active'>
                                        <a href='/read/readbigmiddlegul?num=<%=bigmun%>&pagenum=<%= i %>'>
                                            <%= i %>
                                        </a>
                                    </li>
                                    
                                    <% }else{ %>
                                    
                                    <li value=<%= i %> class='' >
                                        <a href='/read/readbigmiddlegul?num=<%=bigmun%>&pagenum=<%= i %>'>
                                            <%= i %>
                                        </a>
                                    </li>
                                    <%}%>
                                <%}%>
                                
                                <%if(curSet < totalSet){%>
                                    <li value=( endPage + 1) class="next">
                                        <a href='/read/readbigmiddlegul?num=<%=bigmun%>&pagenum=<%= ( endPage + 1) %>'>다음</a>
                                    </li>
                                <%}%>
                                
                                <%}%>
                            </ul>
                </div><!-- /.pasing -->

                    </div>
                </div>
               
            <% } %>
        <% } %>

                
        
               
        
